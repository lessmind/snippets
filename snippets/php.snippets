snippet app
	Yii::app()->${1}
snippet ar
	class ${1:`Filename()`} extends CActiveRecord {
		public static function model($className = __CLASS__) {
			return parent::model($className);
		}
		public function tableName() {
			return '${2:table name}';
		}
		public function primaryKey() {
			return '${3:primary key}';
		}${4}
	}
